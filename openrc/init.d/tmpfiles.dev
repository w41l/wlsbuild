description="set up tmpfiles.d entries"

depend()
{
	use dev-mount
	before dev
	keyword -prefix -vserver
}

start()
{
	ebegin "setting up tmpfiles.d entries for /dev"
	/libexec/rc/sh/tmpfiles.sh --prefix=/dev --create --boot ${tmpfiles_opts}
	eend $?
	return 0
}
